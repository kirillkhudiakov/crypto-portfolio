<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="15dp">

    <TextView
        android:textSize="25sp"
        android:text="Amount:"
        android:id="@+id/currencyAmountLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="30dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/currencyAmountText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/currencyAmountLabel"/>

    <TextView
        android:textSize="25sp"
        android:text="Cost:"
        android:id="@+id/currencyCostLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyAmountLabel"
        android:layout_marginTop="30dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/currencyCostText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/currencyCostLabel"/>

    <TextView
        android:textSize="25sp"
        android:text="Profit:"
        android:id="@+id/currencyProfitLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyCostLabel"
        android:layout_marginTop="30dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/currencyProfitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/currencyProfitLabel" />

    <TextView
        android:textSize="25sp"
        android:text="Daily Change:"
        android:id="@+id/dailyChangeLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/currencyProfitLabel"
        android:layout_marginTop="30dp"/>

    <TextView
        android:textStyle="bold"
        android:textSize="25sp"
        android:id="@+id/dailyChangeText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/dailyChangeLabel" />

    <Button
        android:text="Delete currency"
        android:id="@+id/deleteCurrencyButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="100dp"/>

</android.support.constraint.ConstraintLayout>
